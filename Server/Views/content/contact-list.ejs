<h2 class="pt-5 text-white pb-3">Contact List</h2>

<div class="row">
    <div class="col">

        <!-- Table goes here -->
        <table class="table table-light w-100">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <% if(displayName) { %><th scope="col">Action</th> <% } %>
              </tr>
            </thead>
            <tbody>

              <!-- Repeatable Row Template -->  

              <% for(let count = 0; count < contact.length; count++) { %>
                <tr class="text-left">
                  <th scope="row"><%= count + 1 %></th>
                  <td><%= contact[count].name %></td>
                  <td><%= contact[count].email %></td>
                  <td><%= contact[count].phone %></td>
                  <% if(displayName) { %>
                    <td >
                      <a href="/contact-list/edit/<%= contact[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</a>
                      <a href="/contact-list/delete/<%= contact[count]._id %>" class="btn btn-danger btn-sm delete" ><i class="fas fa-trash-alt fa-sm"></i> Delete</a>
                    </td>
                  <% } %>
                </tr>   
              <% } %>          
            </tbody>
          </table>
    </div>
</div>


